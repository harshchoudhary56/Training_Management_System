<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-tbl_permission-20250907" author="${author1}" context="${context_development}">
        <comment>Create Permission Schema</comment>

        <createTable tableName="${tbl_permission}">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="integer">
                <constraints nullable="true" foreignKeyName="fk_permission_role" references="tbl_role(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>