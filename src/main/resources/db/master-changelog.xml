<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!--    Database Information-->
    <property name="database" value="mariaDB"/>
    <property name="database_username" value="root"/>
    <property name="add_constraint_database" value="mysql"/>


    <!--    Developer Information-->
    <property name="author1" value="Harsh Choudhary"/>

    <!--    Environment Information-->
    <property name="context_testing" value="testing"/>
    <property name="context_development" value="development"/>
    <property name="context_staging" value="staging"/>
    <property name="context_production" value="production"/>

    <!--    Table Name(s)-->
    <property name="tbl_attendance" value="tbl_attendance"/>
    <property name="tbl_availability" value="tbl_availability"/>
    <property name="tbl_batch" value="tbl_batch"/>
    <property name="tbl_course" value="tbl_course"/>
    <property name="tbl_enrollment" value="tbl_enrollment"/>
    <property name="tbl_location" value="tbl_location"/>
    <property name="tbl_session" value="tbl_session"/>
    <property name="tbl_user" value="tbl_user"/>
    <property name="tbl_role" value="tbl_role"/>
    <property name="tbl_permission" value="tbl_permission"/>

    <!--    Pre conditions-->
    <preConditions onFail="HALT" onFailMessage="Unauthorized Access">
        <dbms type="${database}"/>
        <runningAs username="${database_username}"/>
    </preConditions>

    <!-- Include changelogs -->

    <include file="changelog/course/create-course-schema.xml" relativeToChangelogFile="true"/>
    <include file="changelog/location/create-location-schema.xml" relativeToChangelogFile="true"/>
    <include file="changelog/location/insert-location-data.xml" relativeToChangelogFile="true"/>
    <include file="changelog/role/create-role-schema.xml" relativeToChangelogFile="true"/>
    <include file="changelog/role/insert-role-data.xml" relativeToChangelogFile="true"/>
    <include file="changelog/permission/create-permission-schema.xml" relativeToChangelogFile="true"/>
    <include file="changelog/user/create-user-schema.xml" relativeToChangelogFile="true"/>
    <include file="changelog/user/insert-user-data.xml" relativeToChangelogFile="true"/>
    <include file="changelog/availability/create-availability-schema.xml" relativeToChangelogFile="true"/>
    <include file="changelog/batch/create-batch-schema.xml" relativeToChangelogFile="true"/>
    <include file="changelog/session/create-session-schema.xml" relativeToChangelogFile="true"/>
    <include file="changelog/attendance/create-attendance-schema.xml" relativeToChangelogFile="true"/>
    <include file="changelog/enrollment/create-enrollment-schema.xml" relativeToChangelogFile="true"/>





</databaseChangeLog>